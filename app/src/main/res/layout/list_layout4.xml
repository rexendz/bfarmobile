<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:titleEnabled="false">

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:titleEnabled="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_card"
            android:padding="8dp"
            android:gravity="center">
            <TextView
                android:id="@+id/data_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEMP IS TOO LOW FOR PRAWNS"
                android:fontFamily="@font/product_sans"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        app:titleEnabled="false">

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable_layout4"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:el_duration="300"
            app:el_expanded="false"
            android:layout_gravity="center">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_card2"
            android:padding="8dp"
            android:gravity="center">
            <TextView
                android:id="@+id/data_suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHANGE WATER IMMEDIATELY!"
                android:fontFamily="@font/product_sans"
                android:textSize="16sp"
                android:textColor="#212121"
                android:gravity="center"
                />
        </LinearLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>